{
  "manifest_version": 3,
  "name": "Trading Assistant",
  "version": "1.0",
  "description": "Fetch and speak BTC price",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
  "16": "icon.png",
  "48": "icon.png",
  "128": "icon.png"
}

  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.coingecko.com/"
  ]
}
